<?xml version="1.0" encoding="UTF-8"?>

    <android.support.v4.widget.NestedScrollView
    tools:context="com.example.besai.wassalnimaak.Post_offer"
    android:paddingTop="80dp" android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="5dp"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:layout_width="match_parent" android:id="@+id/nestedScrollView" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_height="58dp"
        android:layout_width="338dp"
        android:id="@+id/TextViewTitle"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:text="@string/post_offer">
    </android.support.v7.widget.AppCompatTextView>

    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textInputdepart" tools:layout_editor_absoluteY="90dp" tools:layout_editor_absoluteX="20dp" tools:ignore="MissingConstraints"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/depart"
            android:layout_width="341dp"
            android:layout_height="42dp"
            android:hint="type leaving position"
            android:inputType="textAutoCorrect"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/textInputarrival"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/arrival"
            android:layout_width="341dp"
            android:layout_height="42dp"
            android:hint="type your arrival point"
            android:inputType="textAutoCorrect"
            android:textColor="@android:color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />

</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textInputprice" tools:layout_editor_absoluteY="90dp" tools:layout_editor_absoluteX="20dp" tools:ignore="MissingConstraints"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/price"
            android:layout_width="341dp"
            android:layout_height="42dp"
            android:hint="price per place"
            android:inputType="number"
            android:textColor="@android:color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />


    <android.support.design.widget.TextInputLayout android:layout_height="400dp" android:layout_width="336dp" android:id="@+id/textInputLayotdescrib" tools:layout_editor_absoluteY="18dp" tools:layout_editor_absoluteX="0dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditTextdescription"
            android:layout_width="348dp"
            android:layout_height="80dp"
            android:hint="@string/desription"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="241dp" />

    <android.support.v7.widget.AppCompatButton android:background="@color/colorTextHint" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/button" android:text="validate" android:onClick="onClick" android:layout_marginTop="40dp"/>

</android.support.design.widget.TextInputLayout>

</android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.NestedScrollView>