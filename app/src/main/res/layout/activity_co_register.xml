<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    tools:context="com.example.besai.wassalnimaak.sql.activity_co_register">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/TextViewTitle"
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:text="@string/complete_registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="47dp"
        tools:ignore="MissingConstraints">

    </android.support.v7.widget.AppCompatTextView>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputcartype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
             android:id="@+id/type_voiture"
             android:layout_width="341dp"
                android:layout_height="42dp"
            android:hint="type your car type"
              android:inputType="textAutoCorrect"
              tools:layout_editor_absoluteX="12dp"
             tools:layout_editor_absoluteY="143dp"
              tools:ignore="MissingConstraints" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayotdescrib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/EditTextdescription"
        android:layout_width="348dp"
        android:layout_height="129dp"
        android:hint="@string/desription"
        android:inputType="textMultiLine"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="241dp"
        tools:ignore="MissingConstraints" />
        </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTextHint"
        android:text="validate"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="397dp"
        android:onClick="onClick"
        tools:ignore="MissingConstraints" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="skip"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="397dp"
        android:onClick="onClick"
        tools:ignore="MissingConstraints" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>
